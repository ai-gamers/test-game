    <script>
        function combinations(n, k) {
            if (k < 0 || k > n) return 0;
            if (k === 0 || k === n) return 1;
            if (k > n / 2) k = n - k;
            let res = 1;
            for (let i = 1; i <= k; i++) {
                res = res * (n - i + 1) / i;
            }
            return res;
        }

        function getAtLeastOneProb(deckSize, targets, draws) {
            if (draws <= 0) return 0;
            if (draws >= deckSize) return targets > 0 ? 1 : 0;
            
            const totalWays = combinations(deckSize, draws);
            const failWays = combinations(deckSize - targets, draws);
            
            return 1 - (failWays / totalWays);
        }

        function calculate() {
            // å…¥åŠ›å€¤ã®å–å¾—
            const deckRaw = parseInt(document.getElementById('deckRemaining').value) || 0;
            const myHandRaw = parseInt(document.getElementById('myHand').value) || 1;
            const oppHand = parseInt(document.getElementById('opponentHand').value) || 0;
            const targets = parseInt(document.getElementById('targetCards').value) || 0;

            // 1. åšå£«ã®ç ”ç©¶ã®è¨ˆç®—
            // å±±æœ­ã®æ¯æ•°ã¯å¤‰ã‚ã‚‰ãªã„
            const profDraw = 2;
            const profProb = getAtLeastOneProb(deckRaw, targets, profDraw);
            const profEV = profDraw * (targets / deckRaw);

            // 2. ãƒ¢ãƒãƒãƒå¨˜ã®è¨ˆç®—
            // ãƒ¢ãƒãƒãƒå¨˜ã‚«ãƒ¼ãƒ‰è‡ªä½“ã‚’1æšæ¶ˆè²»ã—ã€æ®‹ã‚Šã®æ‰‹æœ­ã‚’ã™ã¹ã¦æˆ»ã™
            // å±±æœ­ã®æ¯æ•° = å…ƒã®å±±æœ­ + (è‡ªåˆ†ã®æ‰‹æœ­ - 1)
            const deckForCopy = deckRaw + (myHandRaw - 1);
            const copyDraw = oppHand;
            const copyProb = getAtLeastOneProb(deckForCopy, targets, copyDraw);
            const copyEV = copyDraw * (targets / deckForCopy);

            // è¡¨ç¤ºã®æ›´æ–°
            document.getElementById('profProb').innerText = (profProb * 100).toFixed(1);
            document.getElementById('profEV').innerText = profEV.toFixed(2);
            document.getElementById('copyProb').innerText = (copyProb * 100).toFixed(1);
            document.getElementById('copyEV').innerText = copyEV.toFixed(2);

            const bestText = document.getElementById('bestChoiceText');
            const recCard = document.getElementById('recommendationCard');
            
            // åˆ¤å®šãƒ­ã‚¸ãƒƒã‚¯ (çš„ä¸­ç‡å„ªå…ˆ)
            if (copyProb > profProb + 0.001) {
                bestText.innerText = "ãƒ¢ãƒãƒãƒå¨˜";
                recCard.style.borderColor = "#a855f7";
                bestText.className = "text-3xl font-black text-purple-600 mt-1";
            } else if (profProb > copyProb + 0.001) {
                bestText.innerText = "åšå£«ã®ç ”ç©¶";
                recCard.style.borderColor = "#3b82f6";
                bestText.className = "text-3xl font-black text-blue-600 mt-1";
            } else {
                bestText.innerText = "æœŸå¾…å€¤ã¯åŒç­‰";
                recCard.style.borderColor = "#9ca3af";
                bestText.className = "text-3xl font-black text-gray-600 mt-1";
            }

            document.getElementById('resultArea').classList.remove('hidden');
        }
    </script>
